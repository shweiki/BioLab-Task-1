

@model List<POCO.Department>

    <div class="form-group has-danger row">
        <label class="control-label text-right col-md-4">Department</label>
        <div class="col-md-8">
            <select id="SelcetDepartment" name="SelcetDepartment" class="select2 form-control custom-select" style="width: 100%; height:36px;">
                @if (Model.Count > 0)
                {
                    <option  value="" selected>All</option>
                    foreach (POCO.Department item in Model)
                    {
                        <option value="@item.id">@item.departmentname</option>

                    }

                }
                else
                {
                    <option value="">There is no result found.</option>

                }
            </select>
        </div>
    </div>




