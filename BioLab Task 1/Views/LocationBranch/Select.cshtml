@model List<POCO.LocationBranch>

<div class="form-group has-danger row">
    <label class="control-label text-right col-md-3">Branch</label>
    <div class="col-md-9">
        <select id="SelectBranch" name="SelectBranch" class="select2 form-control custom-select" style="width: 100%; height:36px;">
            @if (Model.Count > 0)
            {
                <option selected value="">All</option>
                foreach (POCO.LocationBranch item in Model)
                {
                    <option value="@item.id">@item.Name</option>

                }

            }
            else
            {
                <option value="">There is no result found.</option>

            }
        </select>
        </div>
    </div>
