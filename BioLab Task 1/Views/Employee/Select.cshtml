
@model List<POCO.StaffBasicInformation>

<div class="form-group has-danger row">
    <label class="control-label text-right col-md-3">Emp. Name</label>
    <div class="col-md-9">
        <select id="SelectEmpNo" name="SelectEmpNo" class="select2 form-control custom-select" style="width: 100%; height:36px;">
            @if (Model.Count > 0)
            {
                <option value="" selected>All</option>
                foreach (POCO.StaffBasicInformation item in Model)
                {
                    <option value="@item.empno">@item.FullAnname</option>

                }

            }
            else
            {
                <option value="">There is no result found.</option>

            }


        </select>
    </div>
</div>
