@model List<POCO.SalaryBasicInformation>

<table class="table table-striped table-bordered" id="editable-datatable">
    <thead>
        <tr>
            <th>Emp no.</th>
            <th>Emp. Name</th>
            <th>Basic salary</th>
            <th>Month Count</th>
            <th>Increase %</th>
            <th>Increase Fix</th>
            <th>Total income</th>
            <th>Social Value</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (POCO.SalaryBasicInformation item in Model)
            {

        <tr id="Row_@item.empno">
            <td>@item.empno</td>
            <td>@item.FullAnname</td>
            <td>@item.saljd</td>
            <td>@item.month_count</td>
            <td>@item.emptax</td>
            <td>@item.socialj</td>
            <td>@item.wifetax</td>
            <td>@item.tax_pass_value</td>
            <th>
                <button type="button" data-toggle="tooltip" data-original-title="Edit Employee" class="btn btn-info " onclick="location.href='@Url.Action("Index", "InstallSalariesAndSocialSecurity" ,item )';"><i class="fas fa-edit"></i></button>
            </th>

        </tr>
            }
        }
        else
        {
            <tr> <td class="m-0 p-0" colspan="20"><div class="alert alert-warning text-center m-0">There is no result found.</div></td></tr>
        }
       
    </tbody>
    <tfoot>
        <tr>
            <th>Emp no.</th>
            <th>Emp. Name</th>
            <th>Basic salary</th>
            <th>Month Count</th>
            <th>Increase %</th>
            <th>Increase Fix</th>
            <th>Total income</th>
            <th>Social Value</th>
            <th>#</th>

        </tr>
    </tfoot>
</table>
<script>
    $(document).ready(function () { $('[data-toggle="tooltip"]').tooltip(); });

    function EditEmployee(Id) {
        $("#updateOrganizationArea").load('@(Url.Action("GetOrganizationByID", "General", null, Request.Url.Scheme))?Id=' + Id);
    }


</script>